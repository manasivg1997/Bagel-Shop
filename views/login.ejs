<%- include ('partials/header') %>

  <div class="container-fluid">
    <div class="product-title text-center mt-2 mb-2">Login Page</div>
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-5">
        <div class="product-price">Enter your username and password</div><br />
        <form role="form" action="/login" method="post" style="max-width: 80%;">
          <div class="form-group">
            <input type="text" autofocus name="username" placeholder="Enter Username" class="form-control" />
          </div>
          <div class="form-group">
            <input type="password" name="password" placeholder="Password" class="form-control" />
          </div>
          <div class="text-center mb-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="/home">
              <button type="button" class="btn btn-secondary">Cancel</button></a>
          </div>
        </form>
        <div style="width: 80%; text-align: center;">
          <span class="product-desc">New User?</span>
          <div class="product-desc" style="font-weight: 600;">
            <a class="btn btn-secondary" href="/register">Sign Up!</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include ('partials/footer') %>